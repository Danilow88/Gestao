# Finance-Vibes Theme Example
# Arquivo de exemplo para criar no Rive Web Editor

# Configura√ß√µes do Projeto
project_name: "Finance-Vibes Theme"
canvas_size: "400x300"
fps: 60
background: "transparent"

# Elementos para Criar

## 1. Loading Spinner
element: "loading_spinner"
type: "circle"
properties:
  - radius: 30
  - stroke_width: 4
  - stroke_color: "#9333EA"
  - fill_color: "transparent"
  - center_x: 200
  - center_y: 150

animation: "loading_rotation"
keyframes:
  - frame: 0
    rotation: 0
  - frame: 60
    rotation: 360
duration: 2.0
loop: true
easing: "linear"

## 2. Success Check
element: "success_check"
type: "path"
properties:
  - path: "M 50 150 L 150 250 L 350 50"
  - stroke_width: 8
  - stroke_color: "#10B981"
  - fill_color: "transparent"
  - center_x: 200
  - center_y: 150

animation: "success_animation"
keyframes:
  - frame: 0
    scale: 0
    opacity: 0
  - frame: 15
    scale: 1.2
    opacity: 1
  - frame: 30
    scale: 1.0
    opacity: 1
duration: 0.8
loop: false
easing: "ease-out"

## 3. Metric Card
element: "metric_card"
type: "rectangle"
properties:
  - width: 80
  - height: 60
  - corner_radius: 10
  - fill_color: "rgba(147, 51, 234, 0.1)"
  - stroke_color: "#9333EA"
  - stroke_width: 2
  - center_x: 200
  - center_y: 150

animation: "card_entrance"
keyframes:
  - frame: 0
    scale: 0.8
    opacity: 0
    y: -20
  - frame: 15
    scale: 1.0
    opacity: 1
    y: 0
duration: 0.5
loop: false
easing: "ease-out"

## 4. Navigation Icon
element: "nav_icon"
type: "icon"
properties:
  - icon: "dashboard"
  - size: 24
  - color: "#9333EA"
  - center_x: 200
  - center_y: 150

animation: "nav_rotation"
keyframes:
  - frame: 0
    rotation: 0
  - frame: 90
    rotation: 360
duration: 3.0
loop: true
easing: "ease-in-out"

## 5. Interactive Button
element: "interactive_button"
type: "button"
properties:
  - width: 120
  - height: 40
  - corner_radius: 20
  - fill_color: "#06B6D4"
  - stroke_color: "#06B6D4"
  - stroke_width: 0
  - center_x: 200
  - center_y: 150

states:
  - name: "idle"
    properties:
      scale: 1.0
      opacity: 1.0
  
  - name: "hover"
    properties:
      scale: 1.05
      opacity: 0.9
      fill_color: "#22D3EE"
  
  - name: "click"
    properties:
      scale: 0.95
      opacity: 1.0

transitions:
  - from: "idle"
    to: "hover"
    duration: 0.2
    easing: "ease-out"
  
  - from: "hover"
    to: "idle"
    duration: 0.3
    easing: "ease-in"
  
  - from: "idle"
    to: "click"
    duration: 0.1
    easing: "ease-out"
  
  - from: "click"
    to: "idle"
    duration: 0.2
    easing: "ease-in"

## 6. Data Flow Indicator
element: "data_flow"
type: "dots"
properties:
  - dot_count: 5
  - dot_size: 6
  - dot_color: "#10B981"
  - spacing: 20
  - center_x: 200
  - center_y: 150

animation: "flow_pulse"
keyframes:
  - frame: 0
    opacity: 0.3
    scale: 0.8
  - frame: 15
    opacity: 1.0
    scale: 1.2
  - frame: 30
    opacity: 0.3
    scale: 0.8
duration: 1.5
loop: true
easing: "ease-in-out"

